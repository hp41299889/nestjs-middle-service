<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>App</title>
</head>

<body>
    <div>
        {{ message }}
        <input type="text" id="script">
        <input type="submit" id="submit" onclick="upload()">
        <input type="file" id="fileInput" multiple="multiple" accept=".js,.txt">
    </div>
    <script>
        const apiUrl = "http://192.168.36.50:3000/api/v1/file";
        const fileInput = document.getElementById("fileInput");
        let files;
        fileInput.addEventListener("change", e => {
            files = e.target.files;
        });
        const upload = () => {
            const formData = new FormData();
            for(let i = 0;i < files.length;i++) {
                formData.append('file', files[i]);
            };
            const option = {
                method: 'POST',
                body: formData
            };
            fetch(apiUrl, option);
        };
    </script>
</body>

</html>